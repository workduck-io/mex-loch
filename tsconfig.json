{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "infra/**/*.ts", "serverless.ts", "src/**/*.json"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".esbuild/**/*", "_warmup/**/*", ".vscode/**/*"]
}
